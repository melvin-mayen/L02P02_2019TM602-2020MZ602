  <div style="background-color: dodgerblue; padding: 10px; color: white">
      <center> <h2>Creacion de Usuarios</h2> 
       <p>Ingrese los datos solicitados</p> </center> </div>

       <br />

   



       <div class="row ">
    <div class="col-sm-2">
        <label>Nombre:</label>
    </div>
    <div class="col-sm-4">
        @Html.TextBox("nombre","",new {@class="form-control"})
    </div>
    <div class="col-sm-2">
        <label>Apellido:</label>
    </div>
    <div class="col-sm-4">
        @Html.TextBox("apellido","",new {@class="form-control "})
    </div>
</div>



             <div class="col-sm-2 mb-3">
                <label>Email</label>
            </Div>
            <div class="col-sm-4 mb-3">
                @Html.TextBox("apellido","",new {@class="form-control"})
            </Div>

             <div class="col-sm-2 mb-3">
                <label>Direccion</label>
            </Div>
            <div class="col-sm-4 mb-3">
                @Html.TextBox("apellido","",new {@class="form-control"})
            </Div>

<div class="row align-items-center">
    <div class="col-sm-2">
        <label>Departamento</label>
        @Html.DropDownList("departamento", ViewData["listadoDeNombres"] as SelectList, "Seleccione departamento", new { @class = "form-control" })
    </div>

    <div class="col-sm-2">
        <label>Género:</label>
    </div>
    <div class="col-sm-4">
        <div class="form-inline">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="genero" id="masculino" value="Masculino">
                <label class="form-check-label" for="masculino">
                    Masculino
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="genero" id="femenino" value="Femenino">
                <label class="form-check-label" for="femenino">
                    Femenino
                </label>
            </div>
        </div>
    </div>
    <div class="col-sm-2">
        <label>Puesto:</label>
    </div>
    <div class="col-sm-2">
        @Html.DropDownList("puesto", ViewData["listadoDeNombres"] as SelectList, "Seleccione puesto", new { @class = "form-control" })
    </div>
</div>




















        <button type="submit" class="btn btn-primary">Guardar</button> <br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Direccion</th>
                    <th>Departamento</th>
                    <th>Genero</th>
                    <th>Puesto</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var usuarios in (IEnumerable<dynamic>)ViewData["listadoDeNombres"])
                {
                    <tr>
                        <td>@usuarios.nombre</td>
                        <td>@usuarios.apellido</td>
                        <td>@usuarios.email</td>
                        <td>@usuarios.direccion</td>
                        <td>@usuarios.departamento</td>
                        <td>@usuarios.genero</td>
                        <td>@usuarios.´puesto</td>
                    </tr>
                }
            </tbody>
        </table>


